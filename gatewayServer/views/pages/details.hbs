<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">{{anime.title}}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-3">
            {{> details_anime_stats_sidebar}}
        </div>

        <div class="col-md-9">
            <h1 class="display-5">{{anime.title}}</h1>
            <p class="lead" style="font-size: 1rem;">{{anime.synopsis}}</p>

            <div class="mb-4 py-2 border-top border-bottom">
                <div class="row">
                    <div class="col-auto pe-4">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Source</small>
                        <div class="fw-medium">{{anime.source}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Rating</small>
                        <div class="fw-medium">{{anime.rating}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Licensors</small>
                        <div class="fw-medium">{{anime.licensors}}</div>
                    </div>
                    <div class="col-md border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Producers</small>
                        <div class="fw-medium text-truncate">
                            {{#if anime.producers}}{{anime.producers}}{{else}}<span class="text-muted fst-italic">None found</span>{{/if}}
                        </div>
                    </div>
                </div>
            </div>

            {{> details_score_chart }}

            {{#if recommendations}}
                <div class="mt-5 mb-5">
                    <h4 class="mb-3 border-bottom pb-2">You might also like</h4>

                    <div class="d-flex overflow-auto pb-3" style="gap: 1rem;">
                        {{#each recommendations}}
                            <div class="card border-0 shadow-sm" style="min-width: 150px; width: 150px;">
                                <a href="/anime/{{this.malId}}">
                                    <img src="{{this.imageUrl}}" class="card-img-top rounded"
                                         style="height: 220px; object-fit: cover;"
                                         alt="{{this.title}}"
                                         title="{{this.title}}">
                                </a>

                                <div class="card-body p-2 text-center">
                                    <h6 class="card-title text-truncate small mb-0">
                                        <a href="/anime/{{this.malId}}" class="text-decoration-none text-dark fw-bold">
                                            {{this.title}}
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/if}}

            {{> details_reviews_section }}
            {{> details_tab_content_grid }}

        </div>
    </div>
</div>

{{> details_modal_user }}
{{> details_modal_voice }}
{{> details_modal_staff }}
{{> details_modal_char }}

