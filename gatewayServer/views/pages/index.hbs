<header class="sticky-top shadow-sm" style="z-index: 1020;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#searchControls">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="searchControls">
                <div class="d-flex flex-column flex-lg-row w-100 gap-2 align-items-lg-center ms-lg-4">

                    <div class="input-group">
                        <span class="input-group-text bg-white border-0"><i class="bi bi-search"></i></span>
                        <input type="text" id="searchInput" class="form-control border-0" placeholder="Search 28k+ anime..." value="{{searchParams.q}}">
                        <button class="btn btn-primary" type="button" onclick="searchAnimes(1)">Search</button>
                    </div>

                    <a href="/" class="btn btn-outline-light text-nowrap">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>

                    <button class="btn btn-secondary d-lg-none mt-2" type="button" data-bs-toggle="collapse" data-bs-target="#filterBar">
                        Show Filters
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <div id="filterBar" class="bg-light border-bottom collapse d-lg-block">
        <div class="container py-2">
            <div class="row g-2 align-items-center">

                <div class="col-6 col-md-3">
                    <select id="genreSelect" class="form-select form-select-sm fw-bold text-secondary">
                        <option value="">All Genres</option>
                        <option value="Action">Action</option>
                        <option value="Adventure">Adventure</option>
                        <option value="Avant Garde">Avant Garde</option>
                        <option value="Award Winning">Award Winning</option>
                        <option value="Boys Love">Boys Love</option>
                        <option value="Comedy">Comedy</option>
                        <option value="Drama">Drama</option>
                        <option value="Ecchi">Ecchi</option>
                        <option value="Erotica">Erotica</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Girls Love">Girls Love</option>
                        <option value="Gourmet">Gourmet</option>
                        <option value="Hentai">Hentai</option>
                        <option value="Horror">Horror</option>
                        <option value="Mystery">Mystery</option>
                        <option value="Romance">Romance</option>
                        <option value="Sci-Fi">Sci-Fi</option>
                        <option value="Slice of Life">Slice of Life</option>
                        <option value="Sports">Sports</option>
                        <option value="Supernatural">Supernatural</option>
                        <option value="Suspense">Suspense</option>
                    </select>
                </div>

                <div class="col-6 col-md-3">
                    <select id="ratingSelect" class="form-select form-select-sm fw-bold text-secondary">
                        <option value="">Any Rating</option>
                        <option value="PG - Children">PG - Children</option>
                        <option value="PG-13 - Teens 13 or older">PG-13 - Teens 13 or older</option>
                        <option value="Rx - Hentai">Rx - Hentai</option>
                        <option value="G - All Ages">G - All Ages</option>
                        <option value="R - 17+ (violence & profanity)">R - 17+ (violence & profanity)</option>
                        <option value="R+ - Mild Nudity">R+ - Mild Nudity</option>
                    </select>
                </div>

                <div class="col-6 col-md-2">
                    <select id="minScoreSelect" class="form-select form-select-sm fw-bold text-secondary">
                        <option value="">Min Score: Any</option>
                        <option value="9">9+</option>
                        <option value="8">8+</option>
                        <option value="7">7+</option>
                        <option value="6">6+</option>
                        <option value="5">5+</option>
                    </select>
                </div>

                <div class="col-6 col-md-2 d-grid">
                    <button type="button" class="btn btn-sm btn-outline-secondary" onclick="searchAnimes(1)">Apply Filters</button>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-secondary">Search Results</h4>
        <span id="resultCount" class="badge bg-light text-dark border"></span>
    </div>

    <div id="animeGrid" class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
        {{#each topAnime}}
            <div class="col">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div style="height: 320px; overflow: hidden; position: relative;">
                        <img src="{{this.imageUrl}}" class="card-img-top h-100 w-100" style="object-fit: cover;" alt="{{this.title}}">
                        {{#if this.score}}
                            <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge bg-warning text-dark shadow-sm">
                                <i class="bi bi-star-fill"></i> {{this.score}}
                            </span>
                            </div>
                        {{/if}}
                    </div>
                    <div class="card-body d-flex flex-column pt-3">
                        <h6 class="card-title text-truncate fw-bold" title="{{this.title}}">{{this.title}}</h6>
                        <p class="card-text text-muted small mb-3 text-truncate">
                            {{#if this.genres}}{{this.genres}}{{else}}Unknown Genre{{/if}}
                        </p>
                        <a href="/anime/{{this.malId}}" class="btn btn-primary btn-sm w-100 mt-auto stretched-link">Details</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <nav aria-label="Page navigation" class="mt-5 mb-5">
        <ul id="paginationContainer" class="pagination justify-content-center">

            <li class="page-item {{#unless showPrev}}disabled{{/unless}}">
                <a class="page-link" href="#" onclick="searchAnimes({{prevPage}}); return false;">
                    <i class="bi bi-chevron-left"></i> Previous
                </a>
            </li>

            <li class="page-item disabled">
                <span class="page-link text-muted">Page {{currentPage}}</span>
            </li>

            <li class="page-item">
                <a class="page-link" href="#" onclick="searchAnimes({{nextPage}}); return false;">
                    Next <i class="bi bi-chevron-right"></i>
                </a>
            </li>

        </ul>
    </nav>

</div>

<style>
    .hover-card { transition: transform 0.2s ease, box-shadow 0.2s ease; }
    .hover-card:hover { transform: translateY(-5px); box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important; }
</style>