<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#voice">Voice Actors</button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#staff">Staff</button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#chars">Characters</button>
    </li>
</ul>

<div class="tab-content border border-top-0 p-3 bg-white rounded-bottom">

    <div class="tab-pane fade show active" id="voice">

        <div class="d-flex justify-content-end mb-3 align-items-center">
            <label class="me-2 text-muted small fw-bold">Filter Language:</label>
            <div class="input-group input-group-sm" style="width: 250px;">
                <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                <input type="text" id="voiceLangInput" class="form-control" placeholder="Type language...">
            </div>
        </div>

        <div class="row" id="voiceGrid">
            {{#each voices}}
                <div class="col-md-6 mb-2 voice-card"
                     style="cursor: pointer;"

                     data-language="{{this.language}}"
                     data-name="{{this.personName}}"
                     data-image="{{this.imageUrl}}"
                     data-character="{{this.characterName}}"
                     data-birthday="{{this.birthday}}"
                     data-favorites="{{this.memberFavorites}}"
                     data-website="{{this.websiteUrl}}"
                     data-location="{{this.relevantLocation}}"

                     onclick="populateVoiceModal(this)"
                     data-bs-toggle="modal"
                     data-bs-target="#voiceActorModal">

                    <div class="d-flex align-items-center border rounded p-2 h-100 hover-shadow">
                        <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                        <div>
                            <strong>{{this.personName}}</strong>
                            <span class="badge bg-light text-dark border ms-1">{{this.language}}</span>
                            <br><small class="text-muted">as {{this.characterName}}</small>
                        </div>
                    </div>
                </div>
            {{/each}}

            <div id="noVoicesMsg" class="col-12 text-center text-muted py-3" style="display: none;">
                No voice actors found for this language.
            </div>
        </div>

        <nav aria-label="Voice navigation" class="mt-3">
            <ul id="voicePagination" class="pagination pagination-sm justify-content-center">
            </ul>
        </nav>
    </div>

    <div class="tab-pane fade" id="staff">
        <div class="row" id="staffGrid">
            {{#each staff}}
                <div class="col-md-6 mb-2 staff-card"
                     style="cursor: pointer;"
                     data-name="{{this.name}}"
                     data-job="{{this.job}}"
                     data-image="{{this.imageUrl}}"
                     data-birthday="{{this.birthday}}"
                     data-favorites="{{this.memberFavorites}}"
                     data-location="{{this.relevantLocation}}"
                     data-website="{{this.websiteUrl}}"

                     onclick="populateStaffModal(this)"
                     data-bs-toggle="modal"
                     data-bs-target="#staffModal">

                    <div class="d-flex align-items-center border rounded p-2 h-100 hover-shadow">
                        <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                        <div>
                            <strong>{{this.name}}</strong>
                            <br><small class="text-muted">{{this.job}}</small>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <nav aria-label="Staff navigation" class="mt-3">
            <ul id="staffPagination" class="pagination pagination-sm justify-content-center"></ul>
        </nav>
    </div>

    <div class="tab-pane fade" id="chars">
        <div class="row" id="charGrid">
            {{#each characters}}
                <div class="col-md-6 mb-2 char-card"
                     style="cursor: pointer;"

                     data-id="{{this.id}}"
                     data-name="{{this.name}}"
                     data-role="{{this.role}}"
                     data-image="{{this.imageUrl}}"

                     onclick="populateCharModal(this)"
                     data-bs-toggle="modal"
                     data-bs-target="#charModal">

                    <div class="d-flex align-items-center border rounded p-2 h-100 hover-shadow">
                        <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                        <div>
                            <strong>{{this.name}}</strong>
                            <br><small class="text-muted">{{this.role}}</small>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <nav aria-label="Character navigation" class="mt-3">
            <ul id="charPagination" class="pagination pagination-sm justify-content-center"></ul>
        </nav>
    </div>

</div>