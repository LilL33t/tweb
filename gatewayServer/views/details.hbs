<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">{{anime.title}}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-3">
            <img src="{{anime.imageUrl}}" class="img-fluid rounded shadow mb-3" style="width: 100%;">

            <div class="card mb-3">
                <div class="card-header fw-bold">Statistics</div>
                <ul class="list-group list-group-flush small">
                    <li class="list-group-item"><strong>Type:</strong> {{anime.type}}</li>
                    <li class="list-group-item"><strong>Episodes:</strong> {{anime.episodes}}</li>
                    <li class="list-group-item"><strong>Status:</strong> {{anime.status}}</li>
                    <li class="list-group-item"><strong>Favorites:</strong> {{anime.favorites}}</li>
                    <li class="list-group-item"><strong>Score:</strong> <span class="badge bg-warning text-dark">{{anime.score}}</span></li>
                    <li class="list-group-item"><strong>Watching:</strong> {{stats.watching}}</li>
                    <li class="list-group-item"><strong>Completed:</strong> {{stats.completed}}</li>
                    <li class="list-group-item"><strong>Total Views:</strong> {{stats.total}}</li>
                </ul>
            </div>
        </div>

        <div class="col-md-9">
            <h1 class="display-5">{{anime.title}}</h1>
            <p class="lead" style="font-size: 1rem;">{{anime.synopsis}}</p>

            <div class="mb-4 py-2 border-top border-bottom">
                <div class="row">
                    <div class="col-auto pe-4">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Source</small>
                        <div class="fw-medium">{{anime.source}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Rating</small>
                        <div class="fw-medium">{{anime.rating}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Licensors</small>
                        <div class="fw-medium">{{anime.licensors}}</div>
                    </div>
                    <div class="col-md border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Producers</small>
                        <div class="fw-medium text-truncate">
                            {{#if anime.producers}}{{anime.producers}}{{else}}<span class="text-muted fst-italic">None found</span>{{/if}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-light mb-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Score Distribution</h5>
                    </div>
                    {{#each scoreDistribution}}
                        <div class="d-flex align-items-center mb-1 score-row" style="font-size: 0.9rem;">
                            <span class="fw-bold me-2" style="width: 20px;">{{this.score}}</span>
                            <div class="progress flex-grow-1" style="height: 10px;">
                                <div class="progress-bar bg-{{this.color}}" role="progressbar" style="width: {{this.percentage}}%"></div>
                            </div>
                            <span class="ms-2 text-muted small" style="width: 80px; text-align: right;">{{this.percentage}}%</span>
                        </div>
                    {{/each}}
                </div>
            </div>

            {{#if recommendations}}
                <div class="mt-5 mb-5">
                    <h4 class="mb-3 border-bottom pb-2">You might also like</h4>

                    <div class="d-flex overflow-auto pb-3" style="gap: 1rem;">
                        {{#each recommendations}}
                            <div class="card border-0 shadow-sm" style="min-width: 150px; width: 150px;">
                                <a href="/anime/{{this.malId}}">
                                    <img src="{{this.imageUrl}}" class="card-img-top rounded"
                                         style="height: 220px; object-fit: cover;"
                                         alt="{{this.title}}"
                                         title="{{this.title}}">
                                </a>

                                <div class="card-body p-2 text-center">
                                    <h6 class="card-title text-truncate small mb-0">
                                        <a href="/anime/{{this.malId}}" class="text-decoration-none text-dark fw-bold">
                                            {{this.title}}
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            {{/if}}

            <div id="reviews-section" class="mt-5 mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
                    <h4 class="mb-0">Recent Reviews</h4>

                    <div class="d-flex align-items-center">
                        <label class="me-2 small text-muted fw-bold">Filter:</label>

                        <select id="reviewFilter" class="form-select form-select-sm" style="width: 150px;" onchange="filterReviews(this.value)">
                            <option value="">All Scores</option>
                            <option value="10">10 - Masterpiece</option>
                            <option value="9">9 - Great</option>
                            <option value="8">8 - Very Good</option>
                            <option value="7">7 - Good</option>
                            <option value="6">6 - Fine</option>
                            <option value="5">5 - Average</option>
                            <option value="4">4 - Bad</option>
                            <option value="3">3 - Very Bad</option>
                            <option value="2">2 - Horrible</option>
                            <option value="1">1 - Appalling</option>
                        </select>
                    </div>
                </div>

                <div id="reviewsContainer" class="row">
                    <div class="col-12 text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading reviews...</span>
                        </div>
                    </div>
                </div>

                <nav aria-label="Reviews navigation" class="mt-4">
                    <ul id="reviewsPagination" class="pagination justify-content-center pagination-sm mt-3">
                    </ul>
                </nav>
            </div>

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#voice">Voice Actors</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#staff">Staff</button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#chars">Characters</button>
                </li>
            </ul>

            <div class="tab-content border border-top-0 p-3 bg-white rounded-bottom">

                <div class="tab-pane fade show active" id="voice">

                    <div class="d-flex justify-content-end mb-3 align-items-center">
                        <label class="me-2 text-muted small fw-bold">Filter Language:</label>
                        <div class="input-group input-group-sm" style="width: 250px;">
                            <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                            <input type="text" id="voiceLangInput" class="form-control" placeholder="Type language...">
                        </div>
                    </div>

                    <div class="row" id="voiceGrid">
                        {{#each voices}}
                            <div class="col-md-6 mb-2 voice-card"
                                 style="cursor: pointer;"

                                 data-language="{{this.language}}"
                                 data-name="{{this.personName}}"
                                 data-image="{{this.imageUrl}}"
                                 data-character="{{this.characterName}}"
                                 data-birthday="{{this.birthday}}"
                                 data-favorites="{{this.memberFavorites}}"
                                 data-website="{{this.websiteUrl}}"
                                 data-location="{{this.relevantLocation}}"

                                 onclick="populateVoiceModal(this)"
                                 data-bs-toggle="modal"
                                 data-bs-target="#voiceActorModal">

                                <div class="d-flex align-items-center border rounded p-2 h-100 hover-shadow">
                                    <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                    <div>
                                        <strong>{{this.personName}}</strong>
                                        <span class="badge bg-light text-dark border ms-1">{{this.language}}</span>
                                        <br><small class="text-muted">as {{this.characterName}}</small>
                                    </div>
                                </div>
                            </div>
                        {{/each}}

                        <div id="noVoicesMsg" class="col-12 text-center text-muted py-3" style="display: none;">
                            No voice actors found for this language.
                        </div>
                    </div>

                    <nav aria-label="Voice navigation" class="mt-3">
                        <ul id="voicePagination" class="pagination pagination-sm justify-content-center">
                        </ul>
                    </nav>
                </div>

                <div class="tab-pane fade" id="staff">
                    <div class="row">
                        {{#each staff}}
                            <div class="col-md-6 mb-2 staff-card"
                                 style="cursor: pointer;"

                                 data-name="{{this.name}}"
                                 data-job="{{this.job}}"
                                 data-image="{{this.imageUrl}}"
                                 data-birthday="{{this.birthday}}"
                                 data-favorites="{{this.memberFavorites}}"
                                 data-location="{{this.relevantLocation}}"
                                 data-website="{{this.websiteUrl}}"

                                 onclick="populateStaffModal(this)"
                                 data-bs-toggle="modal"
                                 data-bs-target="#staffModal">

                                <div class="d-flex align-items-center border rounded p-2 h-100 hover-shadow">
                                    <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                    <div>
                                        <strong>{{this.name}}</strong>
                                        <br><small class="text-muted">{{this.job}}</small>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>

                <div class="tab-pane fade" id="chars">
                    <div class="row">
                        {{#each characters}}
                            <div class="col-md-6 mb-2 d-flex align-items-center">
                                <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                <div>
                                    <strong>{{this.name}}</strong>
                                    <br><small class="text-muted">{{this.role}}</small>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>

            </div> </div> </div> </div> <div class="modal fade" id="userProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-person-circle me-2"></i> <span id="modalUsername">User</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <h2 class="display-6 fw-bold" id="modalUsernameDisplay">User</h2>
                    <p class="text-muted" id="modalLocation"><i class="bi bi-geo-alt"></i> Unknown</p>
                    <div class="d-flex justify-content-center gap-3 text-muted small">
                        <span id="modalGender"><i class="bi bi-gender-ambiguous"></i> ?</span>
                        <span>|</span>
                        <span id="modalJoined"><i class="bi bi-calendar"></i> Joined: ?</span>
                    </div>
                </div>
                <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">Anime Stats</h6>
                <div class="row g-2 text-center">
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-success"><small class="d-block text-muted">Watching</small><strong id="modalWatching" class="fs-5">0</strong></div></div>
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-primary"><small class="d-block text-muted">Completed</small><strong id="modalCompleted" class="fs-5">0</strong></div></div>
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-warning"><small class="d-block text-muted">On Hold</small><strong id="modalOnHold" class="fs-5">0</strong></div></div>
                    <div class="col-6"><div class="p-2 bg-light rounded border-start border-4 border-danger"><small class="d-block text-muted">Dropped</small><strong id="modalDropped" class="fs-5">0</strong></div></div>
                    <div class="col-6"><div class="p-2 bg-light rounded border-start border-4 border-secondary"><small class="d-block text-muted">Plan to Watch</small><strong id="modalPlans" class="fs-5">0</strong></div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="voiceActorModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pt-0">

                <img id="voiceModalImg" src="" class="rounded-circle shadow mb-3"
                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff;">

                <h4 id="voiceModalName" class="fw-bold mb-1">Name</h4>
                <p class="text-muted small mb-2">Voice of <span id="voiceModalChar" class="fw-bold text-primary">Character</span></p>

                <p class="text-muted small mb-3">
                    <i class="bi bi-geo-alt-fill text-danger"></i>
                    <span id="voiceModalLoc">Unknown Location</span>
                </p>

                <div class="row g-2 justify-content-center mb-3">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <i class="bi bi-gift text-danger"></i>
                            <div class="small text-muted">Birthday</div>
                            <strong id="voiceModalBday">Unknown</strong>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <i class="bi bi-heart-fill text-danger"></i>
                            <div class="small text-muted">Favorites</div>
                            <strong id="voiceModalFavs">0</strong>
                        </div>
                    </div>
                </div>

                <a id="voiceModalLink" href="#" target="_blank" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-box-arrow-up-right"></i> View Full Profile
                </a>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="staffModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0 pb-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pt-0">

                <img id="staffModalImg" src="" class="rounded-circle shadow mb-3"
                     style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff;">

                <h4 id="staffModalName" class="fw-bold mb-1">Name</h4>

                <p class="text-muted small mb-3">
                    <i class="bi bi-geo-alt-fill text-danger"></i>
                    <span id="staffModalLoc">Unknown Location</span>
                </p>

                <div class="row g-2 justify-content-center mb-3">
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <i class="bi bi-gift text-danger"></i>
                            <div class="small text-muted">Birthday</div>
                            <strong id="staffModalBday">Unknown</strong>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-2 bg-light rounded">
                            <i class="bi bi-heart-fill text-danger"></i>
                            <div class="small text-muted">Favorites</div>
                            <strong id="staffModalFavs">0</strong>
                        </div>
                    </div>
                </div>

                <a id="staffModalLink" href="#" target="_blank" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-box-arrow-up-right"></i> Visit site
                </a>

            </div>
        </div>
    </div>
</div>