<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">{{anime.title}}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-3">
            <img src="{{anime.imageUrl}}" class="img-fluid rounded shadow mb-3" style="width: 100%;">

            <div class="card mb-3">
                <div class="card-header fw-bold">Statistics</div>
                <ul class="list-group list-group-flush small">
                    <li class="list-group-item"><strong>Type:</strong> {{anime.type}}</li>
                    <li class="list-group-item"><strong>Episodes:</strong> {{anime.episodes}}</li>
                    <li class="list-group-item"><strong>Status:</strong> {{anime.status}}</li>
                    <li class="list-group-item"><strong>Favorites:</strong> {{anime.favorites}}</li>
                    <li class="list-group-item"><strong>Score:</strong> <span class="badge bg-warning text-dark">{{anime.score}}</span></li>
                    <li class="list-group-item"><strong>Watching:</strong> {{stats.watching}}</li>
                    <li class="list-group-item"><strong>Completed:</strong> {{stats.completed}}</li>
                    <li class="list-group-item"><strong>Total Views:</strong> {{stats.total}}</li>
                </ul>
            </div>
        </div>

        <div class="col-md-9">
            <h1 class="display-5">{{anime.title}}</h1>
            <p class="lead" style="font-size: 1rem;">{{anime.synopsis}}</p>

            <div class="mb-4 py-2 border-top border-bottom">
                <div class="row">
                    <div class="col-auto pe-4">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Source</small>
                        <div class="fw-medium">{{anime.source}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Rating</small>
                        <div class="fw-medium">{{anime.rating}}</div>
                    </div>
                    <div class="col-auto pe-4 border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Licensors</small>
                        <div class="fw-medium">{{anime.licensors}}</div>
                    </div>
                    <div class="col-md border-start">
                        <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Producers</small>
                        <div class="fw-medium text-truncate">
                            {{#if anime.producers}}{{anime.producers}}{{else}}<span class="text-muted fst-italic">None found</span>{{/if}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card bg-light mb-4 border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Score Distribution</h5>
                    </div>
                    {{#each scoreDistribution}}
                        <div class="d-flex align-items-center mb-1 score-row" style="font-size: 0.9rem;">
                            <span class="fw-bold me-2" style="width: 20px;">{{this.score}}</span>
                            <div class="progress flex-grow-1" style="height: 10px;">
                                <div class="progress-bar bg-{{this.color}}" role="progressbar" style="width: {{this.percentage}}%"></div>
                            </div>
                            <span class="ms-2 text-muted small" style="width: 80px; text-align: right;">{{this.percentage}}%</span>
                        </div>
                    {{/each}}
                </div>
            </div>

            <div id="reviews-section" class="mt-5 mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3 border-bottom pb-2">
                    <h4 class="mb-0">Recent Reviews</h4>

                    <form action="/anime/{{anime.malId}}" method="GET" class="d-flex align-items-center">
                        <label class="me-2 small text-muted fw-bold">Filter:</label>
                        <select name="score" class="form-select form-select-sm" style="width: 150px;">
                            <option value="" {{#unless selectedScore}}selected{{/unless}}>All Scores</option>
                            <option value="10" {{#if (eq selectedScore "10")}}selected{{/if}}>10 - Masterpiece</option>
                            <option value="9" {{#if (eq selectedScore "9")}}selected{{/if}}>9 - Great</option>
                            <option value="8" {{#if (eq selectedScore "8")}}selected{{/if}}>8 - Very Good</option>
                            <option value="7" {{#if (eq selectedScore "7")}}selected{{/if}}>7 - Good</option>
                            <option value="6" {{#if (eq selectedScore "6")}}selected{{/if}}>6 - Fine</option>
                            <option value="5" {{#if (eq selectedScore "5")}}selected{{/if}}>5 - Average</option>
                            <option value="4" {{#if (eq selectedScore "4")}}selected{{/if}}>4 - Bad</option>
                            <option value="3" {{#if (eq selectedScore "3")}}selected{{/if}}>3 - Very Bad</option>
                            <option value="2" {{#if (eq selectedScore "2")}}selected{{/if}}>2 - Horrible</option>
                            <option value="1" {{#if (eq selectedScore "1")}}selected{{/if}}>1 - Appalling</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary ms-2">Go</button>
                    </form>
                </div>

                <div class="row">
                    {{#if reviews}}
                        {{#each reviews}}
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body py-2">
                                        <div class="d-flex justify-content-between align-items-center mb-2">

                                            <a href="#" class="text-decoration-none fw-bold text-primary"
                                               data-bs-toggle="modal"
                                               data-bs-target="#userProfileModal"
                                               data-username="{{this.username}}"
                                               data-gender="{{this.userProfile.gender}}"
                                               data-location="{{this.userProfile.location}}"
                                               data-joined="{{this.userProfile.joined}}"
                                               data-watching="{{this.userProfile.watching}}"
                                               data-completed="{{this.userProfile.completed}}"
                                               data-onhold="{{this.userProfile.on_hold}}"
                                               data-dropped="{{this.userProfile.dropped}}"
                                               data-plans="{{this.userProfile.plan_to_watch}}"
                                               onclick="populateModal(this)">
                                                @{{this.username}}
                                            </a>

                                            <span class="badge bg-secondary">{{this.score}} / 10</span>
                                        </div>
                                        <div class="small text-muted d-flex gap-3">
                                            <span><i class="bi bi-play-circle"></i> {{this.status}}</span>
                                            <span><i class="bi bi-collection"></i> {{#if this.num_watched_episodes}} {{this.num_watched_episodes}} {{else}} ? {{/if}} eps</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="col-12 text-center text-muted py-4">No reviews found on this page.</div>
                    {{/if}}
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <nav aria-label="Reviews navigation">
                        <ul class="pagination pagination-sm">
                            <li class="page-item {{#unless showPrevReviews}}disabled{{/unless}}">
                                <a class="page-link" href="/anime/{{anime.malId}}?score={{selectedScore}}&page={{reviewsPrev}}">Previous</a>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link text-muted">Page {{reviewsPage}}</span>
                            </li>
                            <li class="page-item {{#unless showNextReviews}}disabled{{/unless}}">
                                <a class="page-link" href="/anime/{{anime.malId}}?score={{selectedScore}}&page={{reviewsNext}}">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>

            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item"><button class="nav-link active" data-bs-toggle="tab" data-bs-target="#voice">Voice Actors</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#staff">Staff</button></li>
                <li class="nav-item"><button class="nav-link" data-bs-toggle="tab" data-bs-target="#chars">Characters</button></li>
            </ul>

            <div class="tab-content border border-top-0 p-3 bg-white rounded-bottom">
                <div class="tab-pane fade show active" id="voice">
                    <div class="row">
                        {{#each voices}}
                            <div class="col-md-6 mb-2">
                                <div class="d-flex align-items-center">
                                    <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                    <div><strong>{{this.personName}}</strong> <small class="text-muted">({{this.language}})</small><br><small>as {{this.characterName}}</small></div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="tab-pane fade" id="staff">
                    <div class="row">
                        {{#each staff}}
                            <div class="col-md-6 mb-2 d-flex align-items-center">
                                <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                <div><strong>{{this.name}}</strong><br><small class="text-muted">{{this.job}}</small></div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="tab-pane fade" id="chars">
                    <div class="row">
                        {{#each characters}}
                            <div class="col-md-6 mb-2 d-flex align-items-center">
                                <img src="{{this.imageUrl}}" style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" class="me-2">
                                <div><strong>{{this.name}}</strong><br><small class="text-muted">{{this.role}}</small></div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="userProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-person-circle me-2"></i> <span id="modalUsername">User</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-4">
                    <h2 class="display-6 fw-bold" id="modalUsernameDisplay">User</h2>
                    <p class="text-muted" id="modalLocation"><i class="bi bi-geo-alt"></i> Unknown</p>
                    <div class="d-flex justify-content-center gap-3 text-muted small">
                        <span id="modalGender"><i class="bi bi-gender-ambiguous"></i> ?</span>
                        <span>|</span>
                        <span id="modalJoined"><i class="bi bi-calendar"></i> Joined: ?</span>
                    </div>
                </div>
                <h6 class="text-uppercase text-muted small fw-bold mb-3 border-bottom pb-2">Anime Stats</h6>
                <div class="row g-2 text-center">
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-success"><small class="d-block text-muted">Watching</small><strong id="modalWatching" class="fs-5">0</strong></div></div>
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-primary"><small class="d-block text-muted">Completed</small><strong id="modalCompleted" class="fs-5">0</strong></div></div>
                    <div class="col-4"><div class="p-2 bg-light rounded border-start border-4 border-warning"><small class="d-block text-muted">On Hold</small><strong id="modalOnHold" class="fs-5">0</strong></div></div>
                    <div class="col-6"><div class="p-2 bg-light rounded border-start border-4 border-danger"><small class="d-block text-muted">Dropped</small><strong id="modalDropped" class="fs-5">0</strong></div></div>
                    <div class="col-6"><div class="p-2 bg-light rounded border-start border-4 border-secondary"><small class="d-block text-muted">Plan to Watch</small><strong id="modalPlans" class="fs-5">0</strong></div></div>
                </div>
            </div>
        </div>
    </div>
</div>